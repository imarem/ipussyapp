<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutAnimation="@anim/layout_animation_row_left_slide"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ResultFragment" >

    <ImageView
        android:id="@+id/imgViewModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:contentDescription="@string/name1"
        android:layout_gravity="center_horizontal"
        android:padding="2sp" />
    
    <TextView
        android:id="@+id/txtNameResult"
        android:layout_width="fill_parent"
        android:layout_height="25sp"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:textColor="@color/masterColor"
        android:textIsSelectable="false"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDescResult"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/insideGrad6"
        android:textIsSelectable="false"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtLabelResult"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3sp"
        android:layout_marginTop="15sp"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/insideGrad6"
        android:text="@string/result_label"
        android:textSize="16sp" 
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtLabelResultFinal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/masterColor"
        android:textStyle="bold"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imgViewCalca"
        android:layout_width="180sp"
        android:layout_height="30sp"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:contentDescription="@string/name1" 
        />
    
     <TextView
        android:id="@+id/txtLabelResultEnd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/masterColor"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="100sp"
        android:layout_height="35sp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:textColor="@color/White"
        android:background="@drawable/button_start_selector"
        android:textSize="18sp"/>

</LinearLayout>